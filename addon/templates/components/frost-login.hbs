<div class="panel">
  <div class='branding-strip'>
    {{#if brandingStrip}}
      {{frost-icon icon=brandingStrip}}
    {{else}}
      {{frost-icon icon='app/company-strip'}}
    {{/if}}
  </div>
  {{#if logo}}
    {{frost-icon class="logo" icon=logo}}
  {{else}}
    {{frost-icon class="logo" icon='app/company'}}
  {{/if}}
  {{#if _product}}
    <div class="product">
      {{_product}}
      <span class="version">{{version}}</span>
    </div>
  {{/if}}

  {{#if hasBlock}}
    {{yield section.form}}
    <div class="footer">
      {{yield section.actions}}
    </div>
  {{else}}
    {{frost-bunsen-form
      model=loginFormModel
      onChange=(action "loginFormValueChanged")
      onValidation=(action 'onValidationHandler')
      view=loginFormView
    }}
    <div class="submission-error">{{error}}</div>
    <div class="footer">
      {{frost-button
        disabled=(not valid)
        onClick=(action "submitLogin")
        priority="primary"
        size="medium"
        text="Log in"
      }}
    </div>
  {{/if}}

</div>
